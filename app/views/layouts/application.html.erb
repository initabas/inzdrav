<%= render "layouts/header" %>
<div class="container">
	<div class="row">
	  <div class="col-md-12">
	    <%- flash.each do |name, msg| -%>
	      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	    <%- end -%>  
	    <%= yield %>
	  </div>
	</div>
</div>
<%= render "layouts/footer" %>