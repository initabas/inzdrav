<%= form_for("user", :url => user_session_path, :remote => true, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
	  <div class="row">
			<div class="col-md-4 centered">
		  <h4>Вход на сайт!</h4>
		  <div id="flash">
		  </div>
		  <%= f.text_field :email, :class => "input" %><br>
		  <%= f.password_field :password, :class => "input" %><br>
		  <div id="remember">
		    <%= f.check_box :remember_me %>
		    <%= f.label 'Запомнить меня!', :class => 'sign-label'%>
		  </div>
		  <%= f.submit 'Войти', :id => 'submit-button', :class => 'btn', :remote => true %><br>
		  <%= link_to "Забыли пароль?", new_password_path('user') %>
		  </div>
	  </div>
<% end %>