<%= form_for([commentable, comment], :remote => true, :html => {:multipart => true, :id => "edit_comment-"+comment.id.to_s}) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :parent_id %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Сохранить" %>
		<a class="close_comment_edit_form-<%= comment.id.to_s %>" style="float: right;">&#215;</a>
  </div>
<% end %>